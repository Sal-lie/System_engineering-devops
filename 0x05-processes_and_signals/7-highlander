#!/usr/bin/env bash
# A script that prints a message when receiving SIGTERM instead of terminating
# Function to handle SIGTERM signal
invincible_message() {
    echo "I am invincible!!!"
}

# Trap the SIGTERM signal and call the invincible_message function
trap 'invincible_message' SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
