#!/usr/bin/env bash

# Initialize the counter variable at 1
count=1

# Use a while loop to iterate from 1 to 20
while [ $count -le 20 ]
do
    # Use a case statement to check for specific numbers and display custom messages
    case $count in
        4)
            echo "4 and then bad luck from China"
            ;;
        9)
            echo "9 and then bad luck from Japan"
            ;;
        17)
            echo "17 and then bad luck from Italy"
            ;;
        *)
            echo "$count"
            ;;
    esac

    # Increment the counter for the next iteration
    ((count++))
done
